@model IEnumerable<TestApp1.Models.StudentReport>

@{
    ViewData["Title"] = "Report";
}

<h3>Report</h3>
<hr />

<div class="row">
    <div class="col-md-12">
        @foreach (var div in ViewBag.Divisions)
        {
            <div class="row" style="border: 1px solid black;">
                <div class="col-md-3">
                    @div.Name
                </div>
                <div class="col-md-9">
                    @foreach(var dist in div.Districts)
                    {
                        <div class="row" style="border-left: 1px solid black; border-top: 1px solid black;">
                            <div class="col-md-3">
                                @dist.Name
                            </div>
                            <div class="col-md-9">
                                @foreach (var sch in ViewBag.Schools)
                                {
                                    if (sch.DistrictId == dist.Id)
                                    {
                                        <div class="row" style="border-left: 1px solid black; border-bottom: 1px solid black;">
                                            <div class="col-md-3">
                                                @sch.Name
                                            </div>
                                            <div class="col-md-9">
                                                @foreach (var dept in ViewBag.Departments)
                                                {
                                                    if (dept.SchoolId == sch.Id)
                                                    {
                                                        <div class="row" style="border-left: 1px solid black; border-top: 1px solid black;">
                                                            <div class="col-md-12">
                                                                @dept.Name

                                                                @{
                                                                    var i = 0;

                                                                    foreach (var stu in ViewBag.Students)
                                                                    {
                                                                        if (stu.DepartmentId == dept.Id)
                                                                        {
                                                                            i = i + 1;
                                                                        }
                                                                    }
                                                                }

                                                                [<b>@i</b> students]
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>



